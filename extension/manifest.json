{
  "manifest_version": 3,
  "name": "Paper Summary to Scrapbox",
  "description": "論文ページからPDFを取得し、OpenAIで要約してScrapboxページを開くローカル専用拡張",
  "version": "0.1.0",
  "permissions": ["storage", "scripting", "activeTab", "tabs"],
  "host_permissions": [
    "https://*/*",
    "http://*/*",
    "https://api.openai.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Paper Summary to Scrapbox"
  }
}
